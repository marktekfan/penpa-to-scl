{
  "name": "penpa-to-scl",
  "version": "1.0.0",
  "description": "Convert Penpa+ puzzle into SodukuPad scl type puzzle format",
  "author": "Mark Langezaal <marktekfan@gmail.com> (https://jasonsturges.com)",
  "homepage": "https://github.com/jasonsturges/vite-typescript-npm-package",
  "repository": "github:marktekfan/vite-typescript-npm-package",
  "license": "ISC",
  "keywords": [
    "vite",
    "typescript",
    "npm",
    "package"
  ],
  "main": "dist/index.cjs.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "tsc && vite build --watch",
    "start": "vite --host --open",
    "build": "tsc && vite build",
    "build:types": "dts-bundle-generator --config ./dts-bundle-generator.config.ts",
    "lint:scripts": "eslint ./src --ext .ts",
    "lint:styles": "stylelint ./**/*.{css,scss}",
    "format:scripts": "prettier ./src --write",
    "format:styles": "stylelint ./**/*.{css,scss} --fix"
  },
  "dependencies": {
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^22.7.4",
    "@types/tinycolor2": "^1.4.6",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "dts-bundle-generator": "^9.5.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "stylelint": "^16.9.0",
    "stylelint-config-recommended": "^14.0.1",
    "stylelint-config-sass-guidelines": "^12.1.0",
    "tslib": "^2.7.0",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.2"
  }
}
